<h1>Add New Tag</h1>

<form action="/tags" method="post">
  
  <label for="name">Tag Name:</label>
  <input type="text" name="name" id="name">

  <input type="submit" value="Save Tag"/>
  
</form>
<br>
<h3>Saved Tags:</h3>
<table>
<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name.upcase %></td>
  </tr>
  <% end %>
</table>