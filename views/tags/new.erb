<div id="tm-new">
  <form action="/tags" method="post">
    
    <label for="name">New Tag:</label>
    <input type="text" name="name" id="name">

    <input type="submit" value="Save"/>
    
  </form>
</div>

<div id="tm-saved">
  <h4>Saved Tags</h4>
  <table>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name.upcase %></td>
    </tr>
    <% end %>
  </table>
</div>